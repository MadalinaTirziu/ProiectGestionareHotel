<Page x:Class="Hotel.StartUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        
        
    <Grid x:Name="MainPageGrid" >
            <Grid.Resources>
                <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                    
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="MainStartUpPage" Grid.RowSpan="3" Grid.ColumnSpan="4" NavigationUIVisibility="Hidden"/>
                
            <Button Grid.Column="2" Grid.Row="0" 
                    Content="Sign In"
                    x:Name="SignInButton"
                    Margin="10"
                    Visibility="{Binding SignInVisibility}"/>

            <Button Grid.Column="3" Grid.Row="0"
                    Content="Sign Up"
                    x:Name="SignUpButton"
                    Margin = "10"
                    Visibility="{Binding SignUpVisibility}"/>
            <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    CornerRadius="5" 
                    Background="DarkGreen"
                    Padding="5"
                    Visibility="{Binding UserMenuVisibility}"/>
            <TextBlock Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0"
                     Visibility="{Binding UserTextBoxVisibility}" 
                     HorizontalAlignment="Left" VerticalAlignment="Center"
                     Style="{StaticResource HeaderTextStyle}"
                     Foreground="white"
                     Margin="5">
                    <Run Text="Username: "/>
                    <Run Text="{Binding CurrentUsername}" />
            </TextBlock>
            
                <TextBlock Grid.Column="3" Grid.Row="1" Text="Meniu:" Margin="0 0 47 40"  Visibility="{Binding UserMenuVisibility}" Style="{StaticResource HeaderTextStyle}" />
                <Button Grid.Column="3" Grid.Row="1" Content="Istoric sejururi" Margin="0 10 60 5" Height="20" Width="80"  x:Name="HistoryButton" Visibility="{Binding UserMenuVisibility}" />
            
    </Grid>
        
    
</Page>