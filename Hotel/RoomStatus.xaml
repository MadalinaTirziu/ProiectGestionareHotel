<Page x:Class="Hotel.Admins.RoomStatus.RoomStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.Admins.RoomStatus.ViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <Border x:Name="border" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}" 
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                    </Border>

                                    <TextBlock x:Name="placeholder" 
                                               Text="{TemplateBinding Tag}" 
                                               Foreground="Gray" 
                                               IsHitTestVisible="False" 
                                               Margin="5,2,0,0" 
                                               Visibility="Collapsed"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="Text" Value=""/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
        </Grid.Resources>
        <ListView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Camere}" 
                  VirtualizingStackPanel.IsVirtualizing="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Visibility="{Binding ActiveVisibility}">
                  
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Margin="5" 
                            Padding="15">
                        <StackPanel>
                                <TextBlock Text="{Binding Numar, StringFormat='Camera: {0}'}" 
                                       FontSize="16" FontWeight="Bold"
                                       />
                               

                            <TextBlock Text="{Binding StatusCamera, StringFormat='Status: {0}'}" 
                                       Foreground="DarkBlue"
                                       />

                            
                            <Button HorizontalAlignment="Right" Margin='5' Content="Edit" Width="80" CommandParameter="{Binding}" Command="{Binding DataContext.EditRoomCommand, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                            <Button HorizontalAlignment="Right" Margin='5' Content="Delete" Width="80" CommandParameter="{Binding}"  Command="{Binding DataContext.DeleteRoomCommand, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock TextAlignment="Center" Text="Camere" FontSize="24" Foreground="Black" HorizontalAlignment="Center"/>
            <Grid Grid.Row='1'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Adaugare Camera" Width="100" Height="25" Command="{Binding AddRoomCommand}"/>
                    <TextBox Grid.Column="1" Visibility="{Binding AddRoomVisibility}" 
                             Text="{Binding NewRoomNumber, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"  
                             Style="{StaticResource PlaceholderTextBox}" 
                             Tag="Numar"
                             Height="25"
                             Width="100"
                             BorderThickness="0 0 0 1"/>
                    <StackPanel Grid.Column="2" Margin="2" Visibility="{Binding AddRoomVisibility}">
                        <TextBlock Text="Selecteaza Status Camera:" Margin="0,0,0,1" FontWeight="Bold"/>
    
                            <ComboBox ItemsSource="{Binding StatusOptions}" 
                                SelectedItem="{Binding SelectedStatus}"
                                Width="100" 
                                HorizontalAlignment="Left"
                                Padding="1">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                    </StackPanel>
                    <TextBlock Grid.Column="3" Text="{Binding SelectedStatus, StringFormat='Ati selectat: {0}'}" 
                           Margin="0,10,0,0" 
                           Foreground="Gray"
                           Visibility="{Binding AddRoomVisibility}"/>
                <Button Grid.Column='4' Content="Confirm" Width="100" Height="25" Command="{Binding ConfirmAddRoomCommand}" Visibility="{Binding AddRoomVisibility}"/>
            </Grid>
        </Grid>
        <TextBlock Grid.Row="1" Grid.Column="1" Visibility="{Binding InactiveVisibility}" Text="Nu au fost gasite camere" ></TextBlock>
        <Button Width="40" Height="40" Background="White" Command="{Binding GoBackCommand}">
            <Path Data="M 10,0 L 0,5 L 10,10 Z" 
                  Fill="Black" 
                  Stretch="Uniform" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                  Margin="5"/>
        </Button>
    </Grid>
</Page>