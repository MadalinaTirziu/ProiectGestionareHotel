<Page x:Class="Hotel.Admins.EditRoom.AdminEditRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.Admins.EditRoom.ViewModel">
    
      <Grid>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition  Width="*"/>
                  <ColumnDefinition  Width="5*"/>
                  <ColumnDefinition  Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRoom.Numar, StringFormat='Camera: {0}'}" FontSize="24"/>
            <Grid Grid.Row="1" Grid.Column="2">
                  <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        
                  </Grid.RowDefinitions> 
                  <TextBlock Text="Editati Camera"/>
                  <Grid Grid.Row='1'>
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition/>
                              <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Numarul Camerei: " HorizontalAlignment="Right" VerticalAlignment="Center" Padding="4"/>
                        <TextBox Grid.Column='1' Width='100' Height='22' HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding NumarCamera}" BorderThickness="0 0 0 1"/>
                  </Grid>
                  <Grid Grid.Row='2'>
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition/>
                              <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Statusul Camerei: " HorizontalAlignment="Right" VerticalAlignment="Center" Padding="4"/>
                        <ComboBox Grid.Column='1' ItemsSource="{Binding StatusOptions}" 
                                  SelectedItem="{Binding SelectedStatus}"
                                  Width="100" 
                                  Height="22"
                                  HorizontalAlignment="Left"
                                  Padding="1">
                                    <ComboBox.ItemTemplate>
                                          <DataTemplate>
                                                <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                          </DataTemplate>
                                    </ComboBox.ItemTemplate>
                              </ComboBox>
                  </Grid>
                  <Button Grid.Row="8" Content="Aplica Modificari" Command="{Binding SubmitEditCommand}" Width="100" Height="20" Margin="5 0 5 0"/>
            </Grid>
            
            <Button Width="40" Height="40" Background="White" Command="{Binding GoBackCommand}">
                  <Path Data="M 10,0 L 0,5 L 10,10 Z" 
                        Fill="Black" 
                        Stretch="Uniform" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Margin="5"/>
            </Button>
      </Grid>
</Page>