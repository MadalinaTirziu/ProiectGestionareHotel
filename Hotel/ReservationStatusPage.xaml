<Page x:Class="Hotel.Admins.ReservationStatus.ReservationStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.Admins.ReservationStatus.ViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <Border x:Name="border" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}" 
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                    </Border>

                                    <TextBlock x:Name="placeholder" 
                                               Text="{TemplateBinding Tag}" 
                                               Foreground="Gray" 
                                               IsHitTestVisible="False" 
                                               Margin="5,2,0,0" 
                                               Visibility="Collapsed"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="Text" Value=""/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
        </Grid.Resources>
        <ListView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Rezervari}" 
                  VirtualizingStackPanel.IsVirtualizing="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Visibility="{Binding AllVisibility}">
                  
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Margin="5" 
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="{Binding DataContext.EditMenuColumn, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{Binding CameraRezervata.Numar, StringFormat='Camera: {0}'}" 
                                       FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding StatusRezervare, StringFormat='Status: {0}'}" 
                                           FontSize="14" Foreground="DarkGreen"/>

                            <TextBlock Text="{Binding NumarPersoane, StringFormat='Numar Persoane: {0}'}" 
                                       Foreground="DarkBlue"/>

                            <TextBlock Foreground="Gray">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Perioada: {0:dd/MM/yyyy} - {1:dd/MM/yyyy}">
                                        <Binding Path="DataSosire" />
                                        <Binding Path="DataPlecare" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button HorizontalAlignment="Right" Margin='5' Content="Edit" Width="80" CommandParameter="{Binding}" Command="{Binding DataContext.EditReservationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                           
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding RezervariActive}" 
                  VirtualizingStackPanel.IsVirtualizing="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Visibility="{Binding ActiveVisibility}">
                  
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Margin="5" 
                            Padding="15">
                        <Grid>
                        <StackPanel>
                                <TextBlock Text="{Binding CameraRezervata.Numar, StringFormat='Camera: {0}'}" 
                                       FontSize="16" FontWeight="Bold"/>
                               

                            <TextBlock Text="{Binding NumarPersoane, StringFormat='Numar Persoane: {0}'}" 
                                       Foreground="DarkBlue"/>

                            <TextBlock Foreground="Gray">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Perioada: {0:dd/MM/yyyy} - {1:dd/MM/yyyy}">
                                        <Binding Path="DataSosire" />
                                        <Binding Path="DataPlecare" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button HorizontalAlignment="Right" Margin='5' Content="Edit" Width="80" CommandParameter="{Binding}" Command="{Binding DataContext.EditReservationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                            
                        </StackPanel>
                        <TextBlock Text="Test" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Grid.Column="1" TextAlignment="Center" Text="Rezervari active" FontSize="24" Foreground="Black" HorizontalAlignment="Center" Visibility="{Binding ActiveVisibility}"/>
        <TextBlock Grid.Column="1" TextAlignment="Center" Text="Rezervari" FontSize="24" Foreground="Black" HorizontalAlignment="Center" Visibility="{Binding AllVisibility}"/>   
        <TextBlock Grid.Row="1" Grid.Column="1" Visibility="{Binding InactiveVisibility}" Text="Nu au fost gasite rezervari" />
        <Button Width="40" Height="40" Background="White" x:Name="GoBackButton">
            <Path Data="M 10,0 L 0,5 L 10,10 Z" 
                  Fill="Black" 
                  Stretch="Uniform" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                  Margin="5"/>
        </Button>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Button Content="Vezi Toate" Margin="40 5 " Command="{Binding SeeAllCommand}"/>
            <Button Grid.Row="1" Content="Vezi Active" Margin="40 5" Command="{Binding SeeActiveCommand}"/>
        </Grid>
        
    </Grid>
</Page>