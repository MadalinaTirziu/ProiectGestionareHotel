<Page x:Class="Hotel.RoomPage.CameraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.RoomPage.ViewModel">
      <Grid>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition  Width="*"/>
                  <ColumnDefinition  Width="5*"/>
                  <ColumnDefinition  Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRoom.Numar, StringFormat='Camera: {0}'}" FontSize="24"/>
            <Grid Grid.Row="1" Grid.Column="2">
                  <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        
                  </Grid.RowDefinitions> 
                  <TextBlock Text="Faceti Rezervare"/>
                  <TextBlock Grid.Row="1" Text="Data incepere rezervare"></TextBlock>
                  <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                              <RowDefinition/>
                              <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Zi"/>
                        <TextBox Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding ZiSosire, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1" Text="Luna"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding LunaSosire, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Text="An"/>
                        <TextBox Grid.Column="2" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding AnSosire, UpdateSourceTrigger=PropertyChanged}"/>
                  </Grid>
                  <TextBlock Grid.Row="4" Text="Data plecare rezervare"></TextBlock>
                  <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                              <RowDefinition/>
                              <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Zi"/>
                        <TextBox Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding ZiPlecare, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1" Text="Luna"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding LunaPlecare, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Text="An"/>
                        <TextBox Grid.Column="2" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding AnPlecare, UpdateSourceTrigger=PropertyChanged}"/>
                  </Grid>
                  <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition  Width="2*"/>
                              <ColumnDefinition  Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Numar de Persoane" />
                        <TextBox Grid.Column="1" Height="15" Width="100" VerticalAlignment="Top" Text="{Binding NumarPersoane, UpdateSourceTrigger=PropertyChanged}" />
                        
                  </Grid>
                  <Button Grid.Row="8" Content="Trimite" Command="{Binding SubmitCommand}" Width="100" Height="20" Margin="5 0 5 0"/>
            </Grid>
            
            <Button Width="40" Height="40" Background="White" Command="{Binding GoBackCommand}">
                  <Path Data="M 10,0 L 0,5 L 10,10 Z" 
                        Fill="Black" 
                        Stretch="Uniform" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Margin="5"/>
            </Button>
      </Grid>
</Page>