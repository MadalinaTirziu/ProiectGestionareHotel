<Page x:Class="Hotel.StartUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        
        
    <Grid x:Name="MainPageGrid" >
            <Grid.Resources>
                <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                    
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="MainStartUpPage" Grid.RowSpan="3" Grid.ColumnSpan="4" NavigationUIVisibility="Hidden"/>
                
            <Button Grid.Column="2" Grid.Row="0" 
                    Content="Sign In"
                    x:Name="SignInButton"
                    Margin="20"
                    Visibility="{Binding SignInVisibility}"/>

            <Button Grid.Column="3" Grid.Row="0"
                    Content="Sign Up"
                    x:Name="SignUpButton"
                    Margin = "20"
                    Visibility="{Binding SignUpVisibility}"/>
            <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    CornerRadius="5" 
                    Background="DarkGreen"
                    Padding="5"
                    Visibility="{Binding UserMenuVisibility}"/>
            <TextBlock Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0"
                     Visibility="{Binding UserTextBoxVisibility}" 
                     HorizontalAlignment="Left" VerticalAlignment="Center"
                     Style="{StaticResource HeaderTextStyle}"
                     Foreground="white"
                     Margin="5">
                    <Run Text="Username: "/>
                    <Run Text="{Binding CurrentUsername}" />
            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Camere disponibile" Visibility="{Binding CommonVisibility}"/>
            <ListView Grid.Row="2" Grid.Column="1" ItemsSource="{Binding CamereLibere}" 
                      VirtualizingStackPanel.IsVirtualizing="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      Visibility="{Binding CommonVisibility}">
                  
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#DDDDDD" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Margin="5" 
                                Padding="15">
                            <StackPanel>
                                <Button  x:Name="CameraButton" Click="CameraButton_Click">
                                    <TextBlock Text="{Binding Numar, StringFormat='Camera: {0}'}" FontSize="16" FontWeight="Bold" />
                                </Button>
                                
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Row="0" Text="Meniu:" Margin="0"  Visibility="{Binding UserMenuVisibility}" Style="{StaticResource HeaderTextStyle}" />
                <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Button  Content="Istoric sejururi" Margin="5 5 60 5" Height="20" Width="100"  x:Name="HistoryButton" Visibility="{Binding UserMenuVisibility}" />
                    <Button  Content="Rezervari active" Margin="5 5 60 5" Height="20" Width="100"  x:Name="CurrentReservationButton" Visibility="{Binding UserMenuVisibility}" />
                </StackPanel>
            </Grid>
            <Button Grid.Column="0" Grid.Row="0" Content="Log out" Margin="30 10 30 10" x:Name="LogOutButton" Height="20" Visibility="{Binding UserMenuVisibility}" />
    </Grid>
        
    
</Page>