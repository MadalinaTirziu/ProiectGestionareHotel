<Page x:Class="Hotel.SignUp.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.SignUp.ViewModel">

    <StackPanel Margin="20">
        <TextBlock Text="Enter your username:" Margin="0,0,0,5"/>
        <TextBox Width="200" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        <TextBlock Text="Enter your password:" Margin="0,0,0,22"/>
        <TextBox Width="200" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,30"/>
        <Button Content="Sign Up" Command="{Binding SignUpCommand}" Width="100"/>
    </StackPanel>
</Page>