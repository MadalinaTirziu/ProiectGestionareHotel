<Page x:Class="Hotel.Admins.EditReservationStatus.AdminEditReservationStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.Admins.EditReservationStatus.ViewModel">
      <Grid>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition  Width="*"/>
                  <ColumnDefinition  Width="5*"/>
                  <ColumnDefinition  Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="3*"/>
                  <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRezervare.CameraRezervata.Numar, StringFormat='Camera: {0}'}" FontSize="24"/>
            <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding StatusOptions}" 
                      SelectedItem="{Binding SelectedStatus}"
                      Width="100" 
                      Height="20"
                      HorizontalAlignment="Left"
                      Padding="1"
                      Margin="20 20 20 140">
                  <ComboBox.ItemTemplate>
                        <DataTemplate>
                              <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                        </DataTemplate>
                  </ComboBox.ItemTemplate>
            </ComboBox>

            <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="2">
                  <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        
                  </Grid.RowDefinitions> 
                  <TextBlock Text="Editati Rezervare"/>
                  <TextBlock Grid.Row="1" Text="Data incepere rezervare"></TextBlock>
                  <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                              <RowDefinition/>
                              <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Zi"/>
                        <TextBlock Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding SelectedRezervare.DataSosire.Day, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1" Text="Luna"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding SelectedRezervare.DataSosire.Month, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Text="An"/>
                        <TextBlock Grid.Column="2" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding SelectedRezervare.DataSosire.Year, UpdateSourceTrigger=PropertyChanged}"/>
                  </Grid>
                  <TextBlock Grid.Row="4" Text="Data plecare rezervare"></TextBlock>
                  <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                              <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                              <RowDefinition/>
                              <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Zi"/>
                        <TextBlock Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding SelectedRezervare.DataPlecare.Day, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1" Text="Luna"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding SelectedRezervare.DataPlecare.Month, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Text="An"/>
                        <TextBlock Grid.Column="2" Grid.Row="1" Width="100" HorizontalAlignment="Left" Text="{Binding SelectedRezervare.DataPlecare.Year, UpdateSourceTrigger=PropertyChanged}"/>
                  </Grid>
                  <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition  Width="2*"/>
                              <ColumnDefinition  Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Numar de Persoane" />
                        <TextBlock Grid.Column="1" Height="15" Width="100" VerticalAlignment="Top" Text="{Binding SelectedRezervare.NumarPersoane, UpdateSourceTrigger=PropertyChanged}" />
                        
                  </Grid>
                  <Button Grid.Row="8" Content="Trimite" Command="{Binding SubmitCommand}" Width="100" Height="20" Margin="5 0 5 0"/>
            </Grid>
            
            <Button Width="40" Height="40" Background="White" x:Name="GoBackButton">
                  <Path Data="M 10,0 L 0,5 L 10,10 Z" 
                        Fill="Black" 
                        Stretch="Uniform" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Margin="5"/>
            </Button>
      </Grid>
</Page>