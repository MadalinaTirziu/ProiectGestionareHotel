<Page x:Class="Hotel.SignUp.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.SignUp.ViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20">
        <TextBlock Text="Enter your username:" Margin="0,0,0,5"/>
        <TextBox Width="200" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" BorderThickness="0 0 0 1" />
        <TextBlock Text="Enter your password:" Margin="0,0,0,5"/>
        <TextBox Width="200" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,30" BorderThickness="0 0 0 1"/>
        <Button Content="Sign Up" Command="{Binding SignUpCommand}" Width="100"/>
    </StackPanel>
        <Button Width="40" Height="40" Background="White" x:Name="GoBackButton" HorizontalAlignment="Left" Margin="30 0">
            <Path Data="M 10,0 L 0,5 L 10,10 Z" 
                  Fill="Black" 
                  Stretch="Uniform" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                  Margin="5"/>
        </Button>
    </Grid>
</Page>