<Page x:Class="Hotel.StartUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        
        
    <Grid x:Name="MainPageGrid">
        
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="MainStartUpPage" Grid.RowSpan="3" Grid.ColumnSpan="4" NavigationUIVisibility="Hidden"/>
                
            <Button Grid.Column="2" Grid.Row="0" 
                    Content="Sign In"
                    x:Name="SignInButton"
                    Margin="10"
                    Visibility="{Binding SignInVisibility}"/>

            <Button Grid.Column="3" Grid.Row="0"
                    Content="Sign Up"
                    x:Name="SignUpButton"
                    Margin = "10"
                    Visibility="{Binding SignUpVisibility}"/>

            <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0"
                     Text="{Binding CurrentUsername}" 
                     IsReadOnly="True"
                     BorderThickness = "0"
                     Visibility="{Binding UserTextBoxVisibility}" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Width="100" Margin="5"/>
    </Grid>
        
    
</Page>