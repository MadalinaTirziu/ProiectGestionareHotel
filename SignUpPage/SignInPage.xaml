<Page x:Class="Hotel.SignIn.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Hotel.SignIn.ViewModel">

    <StackPanel Margin="20">
        <TextBlock Text="Enter your username:" Margin="0,0,0,5"/>
        <TextBox Width="200" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        <TextBlock Text="Enter your password:" Margin="0,0,0,22"/>
        <TextBox Width="200" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,30"/>
        <Button Content="Sign In" Command="{Binding SubmitCommand}" Width="100"/>
    </StackPanel>
</Page>